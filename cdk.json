{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__init__.py",
      "**/__pycache__",
      "tests"
    ]
  },
  "context": {
    "project_config": {
      "enterprise": "sofia",
      "project_name": "agent-resources",
      "project_description": "Example of chatbot with RAG support and integration with Bedrock, DynamoDB",
      "author": "Miguel Espinoza Alvarez",
      "email": "miguel.espinoza1388@gmail.com",
      "version": "0.1",
      "app_config": {
        "dev": {
          "artifacts": {
            "local": "./artifacts",
            "aws_bucket": "artifacts",
            "aws_path": "crm",
            "aws_lambda_layers": { 
                "layer_aje_libs" : "arn:aws:lambda:${region}:${account}:layer:layer_aje_libs:3",
                "layer_docs" : "arn:aws:lambda:${region}:${account}:layer:layer_docs:4",
                "layer_requests" : "arn:aws:lambda:${region}:${account}:layer:layer_requests:2",
                "layer_pinecone" : "arn:aws:lambda:${region}:${account}:layer:layer_pinecone:1",
                "layer_langchain" : "arn:aws:lambda:${region}:${account}:layer:layer_langchain:1",
                "layer_powertools" : "arn:aws:lambda:${region}:017000801446:layer:AWSLambdaPowertoolsPythonV2:78"
            }
          },
          "log_level": "DEBUG",
          "api_gw_name": "agent-resources",
          "secret_name": "pinecone-api-key",
          "comment": "Example of chatbot with RAG support and integration with Bedrock, DynamoDB",
          "meta_endpoint": "https://graph.facebook.com/"
        },
        "prod": {
          "artifacts": {
            "local": "./artifacts",
            "aws_bucket": "artifacts",
            "aws_path": "crm",
            "aws_lambda_layers": {
                "layer_aje_libs" : "arn:aws:lambda:${region}:${account}:layer:layer_aje_libs:3",
                "layer_docs" : "arn:aws:lambda:${region}:${account}:layer:layer_docs:4",
                "layer_requests" : "arn:aws:lambda:${region}:${account}:layer:layer_requests:2",
                "layer_pinecone" : "arn:aws:lambda:${region}:${account}:layer:layer_pinecone:1",
                "layer_langchain" : "arn:aws:lambda:${region}:${account}:layer:layer_langchain:1",
                "layer_powertools" : "arn:aws:lambda:${region}:017000801446:layer:AWSLambdaPowertoolsPythonV3-python313-x86_64:78"
            }
          },
          "log_level": "DEBUG",
          "api_gw_name": "agent-resources",
          "secret_name": "pinecone-api-key",  
          "comment": "Example of chatbot with RAG support and integration with Bedrock, mDynamoDB",
          "meta_endpoint": "https://graph.facebook.com/"
        }
      }
    }
  }
}
